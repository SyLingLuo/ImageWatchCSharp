<UserControl x:Class="ImageWatchCSharp.ToolWindow.MainToolWindowControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vsshell="clr-namespace:Microsoft.VisualStudio.Shell;assembly=Microsoft.VisualStudio.Shell.15.0"
             xmlns:vsui="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.15.0"
             xmlns:local="clr-namespace:ImageWatchCSharp.UserControls"
             xmlns:sys="clr-namespace:System;assembly=mscorlib" 
             xmlns:converters="clr-namespace:ImageWatchCSharp.Converters"
             Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
             Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}"
             mc:Ignorable="d"
             d:Height="400" d:Width="800"
             Name="MyToolWindow">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" MinWidth="150" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" 
                       Text="Watch Images" 
                       Margin="5"
                       FontWeight="Bold"
                       Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}" />
            
            <ListBox Grid.Row="1"
                     Name="watchlist"
                     ItemsSource="{Binding StackImages}"
                     SelectedItem="{Binding SelectedWatchImage}"
                     Background="{DynamicResource {x:Static vsshell:VsBrushes.WindowKey}}"
                     BorderBrush="{DynamicResource {x:Static vsshell:VsBrushes.ActiveBorderKey}}" 
                     d:ItemsSource="{d:SampleData ItemCount=1}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Margin="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="{Binding VarName}" 
                                           FontWeight="Bold"
                                           Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsDisposed}" Value="True">
                                                    <Setter Property="TextDecorations" Value="Strikethrough" />
                                                    <Setter Property="Foreground" Value="{DynamicResource {x:Static vsshell:VsBrushes.GrayTextKey}}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock FontSize="10"
                                           Foreground="{DynamicResource {x:Static vsshell:VsBrushes.GrayTextKey}}">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="{}{0}*{1}*{2}">
                                            <Binding Path="Width"/>
                                            <Binding Path="Height"/>
                                            <Binding Path="Type"/>
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                            
                            <Border Grid.Column="1" 
                                    Background="#FFCC0000" 
                                    CornerRadius="2"
                                    Padding="3,1" 
                                    Margin="5,0,0,0"
                                    VerticalAlignment="Center"
                                    Visibility="{Binding IsDisposed, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="已释放" 
                                           Foreground="White" 
                                           FontSize="9" />
                            </Border>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
        
        <GridSplitter Grid.Column="1" 
                      Width="5" 
                      HorizontalAlignment="Stretch" 
                      Background="{DynamicResource {x:Static vsshell:VsBrushes.ActiveBorderKey}}" />
        
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <local:ImageViewer Grid.Row="0" 
                               x:Name="imageViewer"
                               WatchImage="{Binding SelectedWatchImage}"
                               CurrentPixelInfo="{Binding CurrentPixelInfo, Mode=OneWayToSource}"/>
            
            <Border Grid.Row="0"
                    Background="#80000000"
                    Visibility="{Binding SelectedWatchImage.IsDisposed, Converter={StaticResource BooleanToVisibilityConverter}}">
                <TextBlock Text="this Mat is Disposed"
                           Foreground="White"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
            <ToolBar Grid.Row="1" 
                     Background="{DynamicResource {x:Static vsshell:VsBrushes.CommandBarGradientBeginKey}}"
                     BorderBrush="{DynamicResource {x:Static vsshell:VsBrushes.ActiveBorderKey}}">
                <Separator />
                <TextBlock Text="{Binding ElementName=imageViewer, Path=ZoomFactor, StringFormat='Scale: {0:P0}'}" 
                           VerticalAlignment="Center"
                           Margin="5,0" />
            </ToolBar>
            
            <StatusBar Grid.Row="2" 
                       Background="{DynamicResource {x:Static vsshell:VsBrushes.CommandBarGradientBeginKey}}"
                       BorderBrush="{DynamicResource {x:Static vsshell:VsBrushes.ActiveBorderKey}}">
                <StatusBarItem>
                    <TextBlock Text="{Binding CurrentPixelInfo}" 
                               Foreground="{DynamicResource {x:Static vsshell:VsBrushes.WindowTextKey}}" />
                </StatusBarItem>
                <StatusBarItem HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal"  >
                        <TextBlock Text="{Binding SelectedWatchImage.Width, StringFormat='Width: {0}'}" 
                                    Background="{DynamicResource {x:Static vsshell:VsBrushes.CommandBarGradientBeginKey}}"
                                   Margin="0,0,10,0" />
                        <TextBlock Text="{Binding SelectedWatchImage.Height, StringFormat='Height: {0}'}" 
                                   Background="{DynamicResource {x:Static vsshell:VsBrushes.CommandBarGradientBeginKey}}"
                                   Margin="0,0,10,0" />
                        <TextBlock Text="{Binding SelectedWatchImage.Type, StringFormat='Type: {0}'}" />
                        <TextBlock Text=" (Disposed)" 
                                   Foreground="#FFCC0000"
                                   FontWeight="Bold"
                                   Visibility="{Binding SelectedWatchImage.IsDisposed, Converter={StaticResource BooleanToVisibilityConverter}}"
                                   Margin="10,0,0,0" />
                    </StackPanel>
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </Grid>
</UserControl>
